---
const response = await fetch('https://jsonplaceholder.typicode.com/posts')
const posts = await response.json()

---

<h1>Mis publicaciones</h1>

{
  posts.map(post => (
    <div>
      <h2>{post.title}</h2>
      <h4>{post.userId}</h4>
      <p>{post.body}</p>
    </div>
  ))
}

<style>
  body {
    background: #0e0e0e;
    color: #fff;
  }
  h1 {
    color: red;
  }

  h2 {
    color: lightblue;
  }

  h4 {
    color: green;
  }
</style>